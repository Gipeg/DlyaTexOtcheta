<Window x:Class="DlyaTexOtcheta.RegisterWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:DlyaTexOtcheta"
        mc:Ignorable="d"
        Title="RegisterWindow" Height="300" Width="400" WindowStartupLocation="CenterScreen">

    <Grid Margin="20">
        <StackPanel>
            <TextBlock Text="Имя пользователя" />
            <TextBox x:Name="UsernameBox" Margin="0,5" />

            <TextBlock Text="Пароль" />
            <PasswordBox x:Name="PasswordBox" Margin="0,5" />

            <CheckBox x:Name="IsAdminCheck" Content="Администратор" Margin="0,10" />

            <StackPanel Orientation="Horizontal" HorizontalAlignment="Center" Margin="0,10">
                <Button Content="Зарегистрироваться" Width="130" Margin="5" Click="Register_Click"/>
                <Button Content="Отмена" Width="100" Margin="5" Click="Cancel_Click"/>
            </StackPanel>
        </StackPanel>
    </Grid>
</Window>
