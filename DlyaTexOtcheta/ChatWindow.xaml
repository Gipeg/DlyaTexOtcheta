<Window x:Class="DlyaTexOtcheta.ChatWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:DlyaTexOtcheta"
        mc:Ignorable="d"
        Title="ChatWindow" Height="500" Width="400">
    <DockPanel>
        <ListBox x:Name="MessagesList" DockPanel.Dock="Top" Height="350" Margin="10" />

        <StackPanel Orientation="Horizontal" Margin="10">
            <TextBox x:Name="MessageBox" Width="200" Height="30" />
            <Button Content="Отправить" Width="80" Margin="5,0" Click="SendButton_Click" />
            <Button Content="Файл" Width="50" Click="AttachFile_Click" />
        </StackPanel>
    </DockPanel>
</Window>
